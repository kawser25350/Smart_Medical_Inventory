<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="950.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(to bottom, #3a506b 0%, #5bc0be 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartmedicalinventory.controller.Customer_dashbordcontroller">
   <children>
      <!-- Sidebar Navigation -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="867.0" prefWidth="300.0" spacing="0.0" style="-fx-background-color: #ffffffee; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 25, 0, 8, 0);">
         <children>
            <!-- Enhanced Profile Section -->
            <VBox alignment="CENTER" prefHeight="280.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(135deg, #2a3d55 0%, #4aa3b5 100%); -fx-background-radius: 0 0 20 20;">
               <children>
                  <Circle fill="#a3bad0" radius="58.0" stroke="BLACK" strokeType="INSIDE" />

                  <!-- Profile Actions - Only Settings button -->
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button onAction="#profileMenu" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-text-fill: #2a3d55; -fx-background-radius: 20; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: rgba(255,255,255,0.8); -fx-border-radius: 20; -fx-border-width: 2;" text="⚙️ Settings" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>

                  <!-- User Info -->
                  <VBox alignment="CENTER" spacing="8.0">
                     <children>
                        <Label fx:id="userNameLabel" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 2, 0, 0, 1);" text="Loading..." textFill="#000000">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Label>
                        <Label style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 2, 0, 0, 1);" text="Customer" textFill="#1a1a1a">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="customerIdLabel" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 2, 0, 0, 1);" text="ID: Loading..." textFill="#2c2c2c">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="25.0" top="30.0" />
               </padding>
            </VBox>

            <!-- Navigation Buttons -->
            <VBox spacing="8.0" style="-fx-padding: 20 0 0 0;">
               <children>
                  <!-- Medicine Section -->
                  <Label style="-fx-font-weight: bold; -fx-font-size: 11px;" text="MEDICINE SERVICES" textFill="#5bc0be">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="5.0" />
                     </VBox.margin>
                  </Label>

                  <Button fx:id="viewMedicineBtn" onAction="#viewMedicine" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: linear-gradient(to right, #3a506b, #5bc0be); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="💊  Browse Medicines">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </Button>

                  <!-- Shopping Section -->
                  <Label style="-fx-font-weight: bold; -fx-font-size: 11px;" text="SHOPPING" textFill="#5bc0be">
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="20.0" />
                     </VBox.margin>
                  </Label>

                  <Button fx:id="medicalShopBtn" onAction="#medicalShop" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #ffffffee; -fx-text-fill: #3a506b; -fx-background-radius: 12; -fx-font-size: 13px; -fx-border-color: #5bc0be; -fx-border-radius: 12; -fx-border-width: 2; -fx-cursor: hand;" text="🏪  Medical Shop">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </Button>

                  <Button fx:id="orderMedicineBtn" onAction="#orderMedicine" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #ffffffee; -fx-text-fill: #3a506b; -fx-background-radius: 12; -fx-font-size: 13px; -fx-border-color: #5bc0be; -fx-border-radius: 12; -fx-border-width: 2; -fx-cursor: hand;" text="🛒  My Orders">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" onAction="#logout" prefHeight="45.0" prefWidth="260.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="🚪  Sign Out">
               <VBox.margin>
                  <Insets bottom="30.0" left="20.0" right="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>

      <!-- Main Content Area -->
      <VBox layoutX="300.0" layoutY="0.0" prefHeight="950.0" prefWidth="1100.0" spacing="20.0">
         <children>
            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 24; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 15, 0, 0, 5);">
               <children>
                  <VBox>
                     <children>
                        <Label text="Medicine Portal" textFill="#3a506b">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="profileNameLabel" text="Welcome, Loading..." textFill="#5bc0be">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="quickSearchField" prefHeight="40.0" prefWidth="280.0" promptText="Search medicines by name..." style="-fx-background-radius: 20; -fx-padding: 12; -fx-border-color: #3a506b; -fx-border-radius: 20; -fx-border-width: 2; -fx-font-size: 14px;" />
                  <Button onAction="#quickSearch" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: linear-gradient(to right, #3a506b, #5bc0be); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 5, 0, 0, 2);" text="Search" />
               </children>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
            </HBox>

            <!-- Dashboard Stats Boxes - Changed to horizontal layout -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <!-- Available Medicines Box -->
                  <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                     <children>
                        <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: linear-gradient(135deg, #3a506b, #5bc0be); -fx-background-radius: 20;">
                           <children>
                              <Label text="💊" textFill="WHITE">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label fx:id="medicineCountLabel" text="0" textFill="#3a506b">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label text="Available Medicines" textFill="#5bc0be">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                     </padding>
                  </HBox>

                  <!-- My Orders Box -->
                  <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                     <children>
                        <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: linear-gradient(135deg, #5bc0be, #3a506b); -fx-background-radius: 20;">
                           <children>
                              <Label text="📋" textFill="WHITE">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label fx:id="ordersCountLabel" text="0" textFill="#3a506b">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label text="My Orders" textFill="#5bc0be">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                     </padding>
                  </HBox>

                  <!-- Cart Items Box -->
                  <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                     <children>
                        <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: linear-gradient(135deg, #3a506b, #5bc0be); -fx-background-radius: 20;">
                           <children>
                              <Label text="🛒" textFill="WHITE">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label fx:id="cartCountLabel" text="0" textFill="#3a506b">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label text="In Cart" textFill="#5bc0be">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                              <!-- Add Complete Cart Button -->
                              <Button onAction="#completeCart" prefHeight="28.0" prefWidth="120.0" style="-fx-background-color: #5bc0be; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 2, 0, 0, 1);" text="Complete Cart" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                     </padding>
                  </HBox>

                  <!-- Active Status Box -->
                  <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 3);">
                     <children>
                        <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: linear-gradient(135deg, #27ae60, #2ecc71); -fx-background-radius: 20;">
                           <children>
                              <Label text="✅" textFill="WHITE">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Active" textFill="#3a506b">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label text="Account Status" textFill="#5bc0be">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>

            <!-- Main Content Area - Increased height -->
            <ScrollPane fx:id="mainContentPane" fitToWidth="true" prefHeight="700.0" style="-fx-background: transparent; -fx-background-color: #ffffffee; -fx-background-radius: 24;">
               <content>
                  <VBox fx:id="contentArea" alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: transparent; -fx-min-height: 650.0;">
                     <children>
                        <VBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Label text="Welcome to Your Medicine Portal" textFill="#3a506b">
                                 <font>
                                    <Font name="System Bold" size="28.0" />
                                 </font>
                              </Label>
                              <Label text="Browse thousands of medicines, place orders, and manage your healthcare needs with ease." textFill="#5bc0be">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="40.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
