<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="920.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #3a506b 0%, #5bc0be 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartmedicalinventory.controller.Manager_dashbordcontroller">
   <children>
      <!-- Sidebar Navigation -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="920.0" prefWidth="250.0" spacing="10.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 0 15 15 0; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 2, 0);">
         <children>
            <!-- Dashboard Header -->
            <VBox alignment="CENTER" prefHeight="100.0" style="-fx-background-color: #1c2541; -fx-background-radius: 0 15 0 0;">
               <children>
                  <Label text="Smart Medical" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label text="Manager Dashboard" textFill="#b5c7d3">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>

            <!-- Navigation Buttons -->
            <VBox spacing="5.0">
               <children>
                  <Button onAction="#addMedicine" prefWidth="230.0" style="-fx-background-color: #3a506b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="Add Medicine">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button onAction="#showExpiredMedicine" prefWidth="230.0" style="-fx-background-color: #5bc0be; -fx-text-fill: #1c2541; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="Expired Medicine">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button onAction="#showAllMedicine" prefWidth="230.0" style="-fx-background-color: #b5c7d3; -fx-text-fill: #1c2541; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="All Medicine">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button onAction="#updateMedicine" prefWidth="230.0" style="-fx-background-color: #1c2541; -fx-text-fill: #5bc0be; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="Update Medicine">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
            <Button onAction="#removeMedicine" prefWidth="230.0" style="-fx-background-color: #e63946; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="Remove Medicine">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Logout Button -->
            <Button onAction="#logout" prefWidth="230.0" style="-fx-background-color: #e63946; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;" text="Logout">
               <VBox.margin>
                  <Insets bottom="20.0" left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>

      <!-- Main Content Area -->
      <VBox layoutX="250.0" layoutY="0.0" prefHeight="920.0" prefWidth="950.0" spacing="20.0">
         <children>
            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0" style="-fx-background-color: #ffffffee; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 5, 0, 0, 2);">
               <children>
                  <Label text="Medicine Management System" textFill="#1c2541">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="quickSearchField" promptText="Quick Search..." style="-fx-background-radius: 20; -fx-padding: 8;" />
                  <Button onAction="#quickSearch" style="-fx-background-color: #5bc0be; -fx-text-fill: #1c2541; -fx-background-radius: 20;" text="Search" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>

            <!-- Dashboard Cards -->
            <HBox spacing="20.0">
               <children>
                  <!-- Total Medicine Card -->
                  <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #3a506b; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 4);">
                     <children>
                        <Label text="💊" textFill="WHITE">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalMedicineLabel" text="2,456" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label text="Total Medicine" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Expired Medicine Card -->
                  <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #5bc0be; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 4);">
                     <children>
                        <Label text="⚠️" textFill="#1c2541">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Label fx:id="expiredMedicineLabel" text="23" textFill="#1c2541">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label text="Expired Medicine" textFill="#1c2541">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Low Stock Card -->
                  <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #b5c7d3; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 4);">
                     <children>
                        <Label text="📉" textFill="#1c2541">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Label fx:id="lowStockLabel" text="47" textFill="#1c2541">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label text="Low Stock Items" textFill="#1c2541">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>

                  <!-- Categories Card -->
                  <VBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #1c2541; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 4);">
                     <children>
                        <Label text="🏷️" textFill="#5bc0be">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Label fx:id="categoriesLabel" text="15" textFill="#5bc0be">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                        </Label>
                        <Label text="Categories" textFill="#5bc0be">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>

            <!-- Main Content ScrollPane -->
            <ScrollPane fx:id="mainContentPane" fitToWidth="true" prefHeight="500.0" style="-fx-background: transparent; -fx-background-color: #ffffffee; -fx-background-radius: 15;">
               <content>
                  <VBox fx:id="contentArea" alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: transparent;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
